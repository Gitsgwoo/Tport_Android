<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.tport.ui.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_pathFindingFragment"
            app:destination="@id/pathFindingFragment" />
    </fragment>
    <fragment
        android:id="@+id/pathFindingFragment"
        android:name="com.example.tport.ui.fragment.PathFindingFragment"
        android:label="fragment_path_finding"
        tools:layout="@layout/fragment_path_finding" >
        <action
            android:id="@+id/action_pathFindingFragment_to_pathDetailFragment"
            app:destination="@id/pathDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/pathDetailFragment"
        android:name="com.example.tport.ui.fragment.PathDetailFragment"
        android:label="fragment_path_detail"
        tools:layout="@layout/fragment_path_detail" >
        <argument
            android:name="path_id"
            app:argType="integer" />
    </fragment>
    <navigation android:id="@+id/login_graph" app:startDestination="@id/signupFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tport.ui.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpTo="@id/login_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.tport.ui.fragment.SignupFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    </navigation>
    <!-- global action-->
    <action
        android:id="@+id/action_global_login_graph"
        app:destination="@id/login_graph"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"/>
</navigation>