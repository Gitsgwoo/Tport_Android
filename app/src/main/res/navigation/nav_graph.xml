<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.tport.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_pathFindingFragment"
            app:destination="@id/pathFindingFragment" />
    </fragment>
    <fragment
        android:id="@+id/pathFindingFragment"
        android:name="com.example.tport.ui.PathFindingFragment"
        android:label="fragment_path_finding"
        tools:layout="@layout/fragment_path_finding" >
        <action
            android:id="@+id/action_pathFindingFragment_to_pathDetailFragment"
            app:destination="@id/pathDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/pathDetailFragment"
        android:name="com.example.tport.ui.PathDetailFragment"
        android:label="fragment_path_detail"
        tools:layout="@layout/fragment_path_detail" >
        <argument
            android:name="path_id"
            app:argType="integer" />
    </fragment>
</navigation>